{
  "name": "appium-gulp-plugins",
  "description": "Custom gulp plugins to be used across all appium modules",
  "keywords": [
    "appium",
    "gulp",
    "tools"
  ],
  "version": "3.1.1",
  "author": "appium",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/appium/appium-gulp-plugins.git"
  },
  "bugs": {
    "url": "https://github.com/appium/appium-gulp-plugins/issues"
  },
  "engines": [
    "node"
  ],
  "main": "./index.js",
  "bin": {},
  "directories": {
    "lib": "lib",
    "build": "build",
    "test": "test"
  },
  "files": [
    "index.js",
    "lib"
  ],
  "dependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/register": "^7.0.0",
    "@babel/runtime": "^7.0.0",
    "ajv": "^6.0.0",
    "ansi-red": "^0.1.1",
    "appium-ci": "^0.3.0",
    "babel-plugin-istanbul": "^5.0.1",
    "babel-plugin-source-map-support": "^2.0.1",
    "bluebird": "^3.5.1",
    "clear": "^0.1.0",
    "coveralls": "^3.0.0",
    "del": "^3.0.0",
    "eslint": "^5.2.0",
    "eslint-config-appium": "^3.1.0",
    "fancy-log": "^1.3.2",
    "globby": "^8.0.0",
    "gulp": "^4.0.0",
    "gulp-babel": "8.0.0",
    "gulp-concat": "^2.6.1",
    "gulp-debug": "^4.0.0",
    "gulp-eslint": "^5.0.0",
    "gulp-if": "^2.0.2",
    "gulp-mocha": "^6.0.0",
    "gulp-rename": "^1.2.2",
    "gulp-replace": "^1.0.0",
    "gulp-sourcemaps": "^2.6.4",
    "lodash": "^4.0.1",
    "mocha": "^5.0.1",
    "moment": "^2.12.0",
    "node-notifier": "^5.1.2",
    "nyc": "^13.0.1",
    "replace-in-file": "^3.4.0",
    "run-sequence": "^2.2.1",
    "semver": "^5.5.0",
    "source-map-support": "^0.5.3",
    "through2": "^2.0.0",
    "vinyl-paths": "^2.1.0",
    "yargs": "^12.0.1"
  },
  "peerDependencies": {
    "@babel/runtime": "^7.0.0"
  },
  "scripts": {
    "clean": "rm -rf node_modules && rm -f package-lock.json && npm install",
    "test": "gulp once",
    "watch": "gulp watch",
    "coverage": "gulp coveralls",
    "build": "gulp transpile",
    "precommit-msg": "echo 'Pre-commit checks...' && exit 0",
    "precommit-test": "REPORTER=dot gulp once",
    "lint": "gulp eslint"
  },
  "pre-commit": [
    "precommit-msg",
    "precommit-test"
  ],
  "devDependencies": {
    "chai": "^4.1.0",
    "chai-as-promised": "^7.1.1",
    "pre-commit": "^1.1.3"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "8"
          }
        }
      ]
    ],
    "plugins": [
      "source-map-support",
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-transform-runtime"
    ],
    "env": {
      "coverage": {
        "plugins": [
          [
            "istanbul",
            {
              "exclude": [
                "test",
                "build"
              ]
            }
          ]
        ]
      }
    }
  },
  "nyc": {
    "require": [
      "@babel/register"
    ],
    "sourceMap": false,
    "instrument": false
  }
}

{
  "rules": {
    "max-line-length": {
      "options": [120]
    },
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": false,
    "no-console": {
      "severity": "warning",
      "options": ["debug", "info", "log", "time", "timeEnd", "trace"]
    },
    "space-before-function-paren": "always",
    "quotemark": [true, "single", "avoid-escape"],
    "only-arrow-functions": false
  },
  "jsRules": {
    "max-line-length": {
      "options": [120]
    }
  }
}
